# Environment Configuration Example
# Copy this file to .env and modify as needed

# API Configuration
REACT_APP_API_URL=http://localhost:5001

# Environment
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Identity Linking (for anonymous to authenticated conversion)
GOTRUE_SECURITY_MANUAL_LINKING_ENABLED=true

# Frontend Supabase Configuration
REACT_APP_SUPABASE_URL=your_supabase_project_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google OAuth Configuration (REQUIRED FOR AUTHENTICATION)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Frontend Google OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here
REACT_APP_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database URLs (for cloud/Supabase)
# Uncomment and set for acceptance or production
# SUPABASE_DB_URL=postgresql://user:password@host:5432/dbname
# SUPABASE_DB_PASSWORD=your_supabase_password
# SUPABASE_DB_USER=your_supabase_user
# SUPABASE_DB_HOST=your_supabase_host
# SUPABASE_DB_NAME=your_supabase_db

# Supabase Identity Linking
SUPABASE_IDENTITY_LINKING_ENABLED=true

# Acceptance Environment
# NODE_ENV=acceptance
# SUPABASE_DB_URL=postgresql://acceptance_user:acceptance_password@acceptance_host:5432/acceptance_db

# Production Environment
# NODE_ENV=production
# SUPABASE_DB_URL=postgresql://prod_user:prod_password@prod_host:5432/prod_db 